{
  "name": "starter-kit",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/frontend/*",
    "apps/backend/*",
    "packages/frontend/*",
    "packages/backend/*",
    "packages/shared/*"
  ],
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "format": "oxfmt --check",
    "format:fix": "oxfmt",
    "check-types": "turbo run check-types",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.27.0",
    "oxlint": "^1.41.0",
    "turbo": "^2.7.5",
    "typescript": "5.9.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs,cjs,json,md}": [
      "bun format:fix",
      "bun lint:fix"
    ]
  },
  "engines": {
    "bun": ">=1.3.0"
  },
  "packageManager": "bun@1.3.6"
}
